<h1 class="mt-3">My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed? %>
        <i class="fa-regular fa-square-check"></i>
      <% else %>
        <i class="fa-regular fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task), class: "link" %>
    </li>
  <% end %>
</ul>

<br>

<%= link_to 'Add a task', new_task_path, class: "link"  %>
